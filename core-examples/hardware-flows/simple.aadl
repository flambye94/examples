package hw_flow
public

	data dataOnBus
	end dataOnBus;
	
	
	system producer
	features
		mybus : requires data access dataOnBus;
	flows
		f0 : flow source mybus;
	end producer;

	system computer
	features
		mybusinput : requires data access dataOnBus;
		mybusoutput1 : requires data access dataOnBus;
		mybusoutput2 : requires data access dataOnBus;
	flows
		f0 : flow path mybusinput -> mybusoutput1;
		f1 : flow path mybusinput -> mybusoutput2;
	end computer;


	system receiver
	features
		mybus1 : requires data access dataOnBus;
		mybus2 : requires data access dataOnBus;
	flows
		f0 : flow sink mybus1;
		f1 : flow sink mybus2;
	end receiver;


	system mysystem
	end mysystem;
	
	system implementation mysystem.i
	subcomponents
		p1 : system producer;
		p2 : system producer;
		c  : system computer;
		r  : system receiver;
		b1 : data dataOnBus;
		b2 : data dataOnBus;
		b3 : data dataOnBus;
	connections
		c0 : data access p1.mybus <-> b1;
		c1 : data access c.mybusinput <-> b1;
		c2 : data access c.mybusoutput1 <-> b2;
		c3 : data access r.mybus1 <-> b2;
		c4 : data access c.mybusoutput2 <-> b3;
		c5 : data access r.mybus2 <-> b3;
	flows
		etef0 : end to end flow p1 -> c0 -> b1 -> c1 -> c -> c2 -> b2 -> c3 -> r.f0;
		etef1 : end to end flow p1 -> c0 -> b1 -> c1 -> c -> c4 -> b3 -> c5 -> r.f1;
	end mysystem.i;

end hw_flow;
